<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <CheckBoxPreference
        android:key="setting_iscoord_key"
        android:summary="@string/setting_iscoord_text"
        android:title="@string/setting_iscoord_title" android:defaultValue="true"/>

    <PreferenceCategory android:title="@string/folder_settings" >
        <EditTextPreference
            android:defaultValue="/data/felix/configurations/etc/"
            android:dialogMessage="@string/setting_cfolder_instr"
            android:key="setting_cfolder_key"
            android:summary="@string/setting_cfolder_text"
            android:title="@string/setting_cfolder_title" />
        <EditTextPreference
            android:defaultValue="/data/felix/ontologies/"
            android:dialogMessage="@string/setting_ofolder_instr"
            android:key="setting_ofolder_key"
            android:summary="@string/setting_ofolder_text"
            android:title="@string/setting_ofolder_title" />
        <EditTextPreference
            android:defaultValue="/data/felix/configurations/etc/images/"
            android:dialogMessage="@string/setting_ifolder_instr"
            android:key="setting_ifolder_key"
            android:summary="@string/setting_ifolder_text"
            android:title="@string/setting_ifolder_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/user_settings" >
        <EditTextPreference
            android:defaultValue="saied"
            android:dialogMessage="@string/setting_user_instr"
            android:key="setting_user_key"
            android:summary="@string/setting_user_text"
            android:title="@string/setting_user_title" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/setting_type_entries"
            android:entryValues="@array/setting_type_values"
            android:key="setting_type_key"
            android:summary="@string/setting_type_text"
            android:title="@string/setting_type_title" />
    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/conn_settings" >
        <CheckBoxPreference
            android:key="setting_connwifi_key"
            android:summary="@string/setting_connwifi_text"
            android:title="@string/setting_connwifi_title" />
        <Preference
            android:key="setting_resetwifi_key"
            android:summary="@string/setting_resetwifi_text"
            android:title="@string/setting_resetwifi_title" >
        </Preference>
        <ListPreference
            android:entries="@array/setting_connmode_entries"
            android:entryValues="@array/setting_connmode_values"
            android:key="setting_connmode_key"
            android:summary="@string/setting_connmode_text"
            android:title="@string/setting_connmode_title" />
        <ListPreference
            android:entries="@array/setting_conntype_entries"
            android:entryValues="@array/setting_conntype_values"
            android:key="setting_conntype_key"
            android:summary="@string/setting_conntype_text"
            android:title="@string/setting_conntype_title" />
    </PreferenceCategory>
</PreferenceScreen>