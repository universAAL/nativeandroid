<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".HandlerActivity" >

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" 
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay">
    </ScrollView>

    <ScrollView
        android:id="@+id/mainHorizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/menu_dropdown_panel_uaal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin_submits"
        android:paddingRight="@dimen/activity_horizontal_margin_submits"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone" 
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay">

    </ScrollView>

</LinearLayout>