<?xml version="1.0" encoding="utf-8"?>
<!-- GlobalLighting.org -->
<Service name="http://ontology.igd.fhg.de/LightingServer.owl#LightingService" superClassInOntology="org.universAAL.ontology.lighting.Lighting" xmlns="http://universAAL.org/AndroidService#"> 
	<Ontologies>
		<Ontology value="org.universAAL.ontology.location.LocationOntology"/>
		<Ontology value="org.universAAL.ontology.shape.ShapeOntology"/>
		<Ontology value="org.universAAL.ontology.phThing.PhThingOntology"/>
		<Ontology value="org.universAAL.ontology.space.SpaceOntology"/>
		<Ontology value="org.universAAL.ontology.lighting.LightingOntology"/>
	</Ontologies>
	<Operations>
		<Operation 	name="http://ontology.igd.fhg.de/LightingServer.owl#turnOn" 
					androidAction="org.universaal.nativeandroid.lightserver.TURNON" 
					androidCategory="android.intent.category.DEFAULT">
			<Inputs>
				<Input 	name="http://ontology.igd.fhg.de/LightingServer.owl#lampURI"
						androidName="http://ontology.igd.fhg.de/LightingServer.owl#controlledLamp{lamp_number}"> 
					<Filtering classUri="http://ontology.universaal.org/Lighting.owl#LightSource" 
					minCardinality="1" 
					maxCardinality="1"/> 
					<PropertyPath>
						<Property uri="http://ontology.igd.fhg.de/LightingServer.owl#controls"/>
					</PropertyPath>
				</Input>
			</Inputs>
			<ChangeEffects>
				<ChangeEffect>
					<PropertyPath>
						<Property uri="http://ontology.igd.fhg.de/LightingServer.owl#controls"/>
						<Property uri="http://ontology.igd.fhg.de/LightingServer.owl#brightness"/>
					</PropertyPath>
					<Value class="java.lang.Integer">100</Value>
				</ChangeEffect>
			</ChangeEffects>
		</Operation>
		
		<Operation 	name="http://ontology.igd.fhg.de/LightingServer.owl#getControlledLamps" 
					androidAction="org.universaal.nativeandroid.lightserver.GETCONTROLLEDLAMPS" 
					androidCategory="android.intent.category.DEFAULT"
					androidReplyToActionExtaParameter="replyToAction"
					androidReplyToCategoryExtraParameter="replyToCategory">
			<Outputs>
			<!-- The android will return an array of numbers - if 0-0 then it is array - use getStringArray. lamp_number_array - its is the android parameter name-->
				<Output	name="http://ontology.igd.fhg.de/LightingServer.owl#controlledLamps"
						androidName="http://ontology.igd.fhg.de/LightingServer.owl#controlledLamp{lamp_number_array}" 
						class= "org.universAAL.ontology.lighting.LightSource" 
						classUri="http://ontology.universaal.org/Lighting.owl#LightSource" 
						minCardinality="0" 
						maxCardinality="0"> 
					<PropertyPath>
						<Property uri="http://ontology.igd.fhg.de/LightingServer.owl#controls"/>
					</PropertyPath>
				</Output>
			</Outputs>
		</Operation>
		
	</Operations>
</Service>