<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.universaal.nativeandroid.lightserver"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="org.universAAL.android.metadata" android:resource="@raw/uaal"/>
        <activity
            android:name=".LightServerActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <receiver
            android:name=".LightCallTurnReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="org.universaal.nativeandroid.light.CALL_ON" />
                <action android:name="org.universaal.nativeandroid.light.CALL_OFF" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        
        <receiver
            android:name=".LightCallGetReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="org.universaal.nativeandroid.light.CALL_GETLAMPS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        
    </application>

</manifest>
